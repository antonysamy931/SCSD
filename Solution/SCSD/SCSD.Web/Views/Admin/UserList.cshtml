@model IEnumerable<SCSD.DTO.Model.UserDTO>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-12">
    <h1>User List</h1>
</div>
<div class="col-sm-12">
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupType)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupType)
                    </td>
                    <td>
                        <a href="@Url.Action("PersonalAdmin", "Home", new { UserId = item.UserId })"><span class="glyphicon glyphicon-eye-open" aria-hidden="true" title="VIEW"></span></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
