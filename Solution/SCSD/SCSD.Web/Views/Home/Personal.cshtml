@model SCSD.DTO.Model.UserDetail

@{
    ViewBag.Title = "Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .padding-top {
        margin-bottom: 0;
        padding-top: 10px;
    }
</style>
<div class="row">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Dashboard", "Home")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>&nbsp;Dashboard</a></li>
        <li class="active">Profile</li>
    </ol>
</div>
<div class="col-sm-12">
    <h1>User Detail</h1>
</div>

<div class="col-sm-12">
    <div class="panel panel-default">
        <form action="#" class="form-horizontal">
            @Html.HiddenFor(model => model.UserId)
            <div class="panel-body">
                <fieldset>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            <p class="padding-top">@Model.Name</p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Age, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            <p class="padding-top">@Model.Age</p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Gender, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            <p class="padding-top">@Model.Gender</p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DOB, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            <p class="padding-top">@Model.DOB</p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            <p class="padding-top">@Model.UserName</p>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="panel-footer text-right">
                <a class="btn btn-default" href="@Url.Action("PersonalEdit", "Home")">Edit</a>
            </div>
        </form>
    </div>
</div>
