@model IEnumerable<SCSD.DTO.Model.UploadList>

@{
    ViewBag.Title = "My File List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {

    });
    function popup() {
        $('#choosepartPreview').modal('show');
    }
</script>

<div class="row">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Dashboard", "Home")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>&nbsp;Dashboard</a></li>
        <li class="active">My File List</li>
    </ol>
</div>
<div class="col-sm-12">
    <h1>My List</h1>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @{ string name = item.FileName.Length < 20 ? item.FileName : item.FileName.Remove(17) + "...";}
                    @name
                    <a href="@Url.Action("DeleteFile", "Upload", new { FileId = item.FileId })"><span class="glyphicon glyphicon-remove" style="float: right; padding-right: 2%; cursor: pointer;" aria-hidden="true" title="REMOVE"></span></a>
                    <a href="#" onclick="javascript:popup()"><span class="glyphicon glyphicon-share" style="float: right; padding-right: 2%; cursor: pointer;" aria-hidden="true" title="SHARE"></span></a>
                    <a href="#"><span class="glyphicon glyphicon-edit" style="float: right; padding-right: 2%; cursor: pointer;" aria-hidden="true" title="EDIT"></span></a>
                </div>
                <div class="panel-body">
                    <img src="@Url.Action("GetBanar", "Upload", new { BanarId = item.BanarId })" class="img-thumbnail col-sm-3" />
                    <p class="col-sm-9">@item.Description</p>
                </div>
                <div class="panel-footer">
                    <a class="btn btn-primary" href="@Url.Action("GetDocument", "Upload", new { FileId = item.FileId })">Download</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="choosepartPreview" tabindex="-1" role="dialog" aria-labelledby="previewLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title" id="previewLabel">Choose
                    <span id="panelHeader"></span>
                </h3>

            </div>
            <div class="modal-body clearfix">

                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" id="searchItemText" class="form-control input-sm" autocomplete="off" />
                        <span class="field-validation-valid" id="errorText"></span>
                    </div>
                    <button class="btn btn-form btn-sm" type="button" id="btnSearchItems">Search</button>
                </div>
                <div class="form-group popup-view-list">
                    <div class="col-sm-10 multiselect" id="selectItems">
                    </div>
                </div>
                <div class="col-sm-12">
                    <h3>Selected Values</h3>
                    <div class="form-group">
                        <ul id="selectedItemName" class="selectedItem">
                        </ul>
                        <input type="hidden" id="selectedItemValue" />
                        <input type="hidden" id="selectionType" />
                    </div>
                </div>
            </div>
            <div class="modal-footer text-right">
                <input class="btn btn-primary" value="Ok" type="button" id="btnChooseOk">
                <input class="btn btn-default" value="Cancel" type="button" id="btnChooseCancel">
            </div>
        </div>
    </div>
</div>