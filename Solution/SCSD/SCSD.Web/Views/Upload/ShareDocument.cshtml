@model SCSD.DTO.Model.ShareFile

@{
    ViewBag.Title = "ShareDocument";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#UserSelect').multiselect();
    });
</script>
<style>
    .padding-top {
        margin-bottom: 0;
        padding-top: 10px;
    }
    .multiselect.dropdown-toggle {
        height:35px;
        padding:10px;
    }
</style>

<div class="col-sm-12">
    <h1>Share File</h1>
</div>

<div class="col-sm-12">
    <div class="panel panel-default">
        <form action="/Upload/ShareDocument" method="post" class="form-horizontal">
            @Html.HiddenFor(x => x.FileId)
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-4 control-label">File Name</label>
                    <div class="col-sm-4">
                        <p class="padding-top">@Model.uploadFile.FileName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Description</label>
                    <div class="col-sm-4">
                        <pre class="padding-top">@Model.uploadFile.Description</pre>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">File</label>
                    <div class="col-sm-4">
                        <a href="@Url.Action("GetDocument", "Upload", new { FileId = Model.uploadFile.FileId })" class="padding-top">@Model.uploadFile.FileName</a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Users</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.Users, new SelectList(Model.UserList, "Key", "Value"), new { @multiple="multiple", @id = "UserSelect"})
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <button type="submit" class="btn btn-default">Share</button>
            </div>
        </form>
    </div>
</div>
